<!-- Page Content -->
<div class="container-fluid post-container">

    <!-- Portfolio Item Heading -->
    <div class="row">
        <div class="col-lg-12 header-container">
            <h1 class="page-header"><%= @post.title %>
                <small>Item Subheading</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Portfolio Item Row -->
    <div class="row portfolio-item-box">
        <div class="col-md-4 col-md-offset-2 portfolio-item-pic">
        <a href="<%= @post.url %>" target=<%= @target %>><%= image_tag @post.image, class: 'img-responsive' %></a>
        </div>

        <div class="col-md-4">
            <h2><%= @post.title %></h2>
            <p><%= @post.body %></p>
        </div>

    </div>
    <!-- /.row -->


    <!-- /.row -->
</div>